@model ErpPortal.Web.Models.UserFormViewModel
@{
    ViewData["Title"] = "Kullanıcı Oluştur";
}
<div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-xl font-bold mb-4">Yeni Kullanıcı</h2>
    <form asp-action="Create" method="post" class="space-y-4">
        <div class="grid grid-cols-1 gap-4">
            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="FullName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>
            <div class="flex items-center space-x-4">
                <label class="inline-flex items-center">
                    <input asp-for="IsAdmin" type="checkbox" class="form-checkbox text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2">Admin</span>
                </label>
                <label class="inline-flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="form-checkbox text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2">Aktif</span>
                </label>
            </div>
        </div>
        <div class="flex justify-end space-x-3">
            <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded">İptal</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded">Kaydet</button>
        </div>
    </form>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 