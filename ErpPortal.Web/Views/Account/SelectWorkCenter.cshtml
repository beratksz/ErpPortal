@model ErpPortal.Web.Models.SelectWorkCenterViewModel
@{
    ViewData["Title"] = "İş Merkezi Seçimi";
}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-6 bg-white p-6 shadow rounded-lg">
        <h2 class="text-xl font-semibold text-center">Çalışacağınız İş Merkezini Seçin</h2>
        <form asp-action="SelectWorkCenter" asp-controller="AccountUi" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            @foreach (var wc in Model.WorkCenters)
            {
                <div class="flex items-center">
                    <input type="radio" id="wc_@wc.Id" name="workCenterCode" value="@wc.Code" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" />
                    <label for="wc_@wc.Id" class="ml-2 block text-sm text-gray-700">@wc.Name (@wc.Code)</label>
                </div>
            }
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded">Seç</button>
        </form>
    </div>
</div> 